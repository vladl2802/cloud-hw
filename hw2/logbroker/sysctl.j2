[Unit]
Description=Logbroker instance
After=network.target

[Service]
User={{ ansible_user }}
Environment="CLICKHOUSE_URL={{ clickhouse_url }}"
Environment="CLICKHOUSE_TABLE={{ clickhouse_table }}"

Group=www-data
StandardOutput=journal
StandardError=journal
WorkingDirectory=/home/{{ ansible_user }}/logbroker
Environment="PATH=/home/{{ ansible_user }}/logbroker/venv/bin"
ExecStart=/home/{{ ansible_user }}/logbroker/venv/bin/uvicorn main:app --host 0.0.0.0 --port 8080

[Install]
WantedBy=multi-user.target
